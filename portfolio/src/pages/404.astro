---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Página no encontrada - Francisco Costanzo">
  <section class="error-404">
    <h1>Francisco Costanzo</h1>
    <h2>Portfolio</h2>
    <h3>Error 404</h3>
    <p>Lo sentimos, la página que buscas no existe.</p>
    <a href="/" class="btn">Volver al inicio</a>
  </section>
</Layout>

<style lang="scss">
  $color-nevada: (
    50: #f5f6f6,
    100: #e5e8e8,
    200: #ced3d3,
    300: #abb4b5,
    400: #818d8f,
    500: #626d6f,
    600: #576063,
    700: #4b5153,
    800: #424748,
    900: #3a3e3f,
    950: #242728,
    shadow: #2427284d,
  );

  @function color-nevada($shade) {
    @return map-get($color-nevada, $shade);
  }

  .error-404 {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    text-align: center;
    padding: 20px;

    h1 {
      color: color-nevada(950);
      font-size: 3rem;
      margin-bottom: 0.5rem;
    }

    h2 {
      color: color-nevada(700);
      font-size: 2rem;
      margin-bottom: 1.5rem;
    }

    h3 {
      color: color-nevada(900);
      font-size: 4rem;
      margin-bottom: 1rem;
    }

    p {
      color: color-nevada(700);
      font-size: 1.5rem;
      margin-bottom: 2rem;
    }

    .btn {
      text-decoration: none;
      background-color: color-nevada(950);
      color: color-nevada(50);
      border: 1px solid color-nevada(950);
      padding: 0.5rem 1rem;
      border-radius: 6px;
      cursor: pointer;
      font-size: 1.25rem;
      transition: all 0.3s ease;

      &:hover {
        box-shadow: 0 2px 20px 1px color-nevada(shadow);
        border: 1px solid color-nevada(950);
        color: color-nevada(950);
        background-color: color-nevada(50);
      }
    }
  }

  @media (max-width: 768px) {
    .error-404 {
      h1 {
        font-size: 2.5rem;
      }

      h2 {
        font-size: 1.75rem;
      }

      h3 {
        font-size: 3rem;
      }

      p {
        font-size: 1.25rem;
      }

      .btn {
        font-size: 1rem;
        padding: 0.5rem 1rem;
      }
    }
  }
</style>
