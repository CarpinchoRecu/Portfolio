import ambu3 from "../../public/ImgProyectosDineno/Redes/ambu3.webp";
import ambu4 from "../../public/ImgProyectosDineno/Redes/ambu4.webp";
import ases1 from "../../public/ImgProyectosDineno/Redes/ases1.webp";
import ases2 from "../../public/ImgProyectosDineno/Redes/ases2.webp";
